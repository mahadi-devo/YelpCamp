<%- include ("../partials/header") %>

<div class="row">
    <div class="form-signUp justify-content-center">
        <div class="header text-center">
            <h3>Edit <%= campground.name %></h3>
        </div>
            <form class="form" action="/campgrounds/<%= campground._id %>?_method=PUT" method= "POST" enctype="multipart/form-data">
                    <div class="md-form">
                        <i class="fas fa-campground prefix"></i>
                        <input class="form-control shadow-none" id="name" type="text" name ="campground[name]" value ="<%= campground.name %>">
                        <label for="name"></label>
                    </div>
                    <div class="md-form">
                        <i class="fas fa-tsg prefix"></i>
                        <input class="form-control shadow-none" id="price" type="number" name ="campground[price]" value ="<%= campground.price %>" min = "0.01" step = "0.01">
                        <label for="price"></label>
                    </div>
                    <div class="md-form">
                        <i class="fas fa-location-arrow prefix"></i>
                        <input class="form-control shadow-none" type="text" name="campground[location]" id="location" value="<%= campground.location %>">
                        <label for="location">Location</label>
                    </div>
                    <div class="md-form">
                        <i class="fas fa-image prefix"></i>
                        <input type="file" id="image" name="image" accept="image/*" >
                        <label for="image" class="sr-only">Image</label>
                    </div>
                    <div class="md-form">
                        <i class="fas fa-pencil-alt prefix"></i>
                        <textarea id="description" name= "campground[description]" class="md-textarea form-control" rows="3"><%= campground.description %></textarea>
                        <label for="description">Description</label>
                        <!-- <input class="form-control shadow-none" type="text" name ="campground[description]" value="<%= campground.description %>"> -->
                    </div>
                    <button type="submit" class="btn btn-lg btn-primary btn-block">Submit</button>    
            </form>
        </div>
    </div>

<%- include ("../partials/footer") %>