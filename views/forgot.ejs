<%- include ("./partials/header") %>

<div class="login-pg">
	<div class="row">
    <div class="form-signUp">
        <div class="header">
            <h2>Forgot Password</h2>
		</div>
		<form class="form-signin" action="/forgot" method="POST">
			<div class="col">
				<div class="md-form">
					<i class="fas fa-at prefix"></i>
					<label for="email">Email</label>
					<input type="email" id="email" name="email" class="form-control shadow-none" required>
				</div>
				<input type="submit" class="btn btn-lg btn-primary btn-block mb-4 ml-3" value="Reset Password">
			</div>
			<!-- <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>    -->
		</form>
    </div>
</div>
</div>



