<%- include ("../partials/header") %>

<div class="d-flex flex-row login-pg">
	<div class="col-md-4">
			<h2 class="font-weight-bold"><%= user.firstName + " " + user.lastName %></h2>
		<div class="thumbnail">
			<% if(user.avatar) { %>
				<img src="<%= user.avatar %>" alt="user profile image" width="200px" height="200" >
			<% } else { %>
				<img src="https://res.cloudinary.com/mahadi/image/upload/v1584360471/img-13_smmbx7.png" alt="user profile image" width="200px" height="200" >
			<% } %>
			<div class="card-title mt-5">
			<span class="font-weight-bold">email : </span>
			<a href="mailto:<%= user.email %>" style="color:black"><%= user.email %></a></div>
		</div>
	</div>
	<hr/>
    
	<div class="col-md-8 px-2 mb-5">
        <div class="col-12"><h3 class="px-2"><strong><%= user.username %>'s campgrounds:</strong></h3></div>
        <div class="col d-flex flex-wrap">
        <% campgrounds.forEach(function(campground){ %>
        <div class="col-lg-6 col-md-4 col-sm-6 mb-4">
            <div id ="card" class="card">
                <div class="view overlay">
                    <img class="card-img-top" src="<%= campground.image %>" alt="<%= campground.image %>" height="170px" width="238px">
                    <a href="/campgrounds/<%= campground._id %>">
                      <div class="mask rgba-white-slight"></div>
                    </a>
                  </div>
                <div class="card-body">
                        <h6 class="card-title font-weight-bold"><a href="/campgrounds/<%= campground._id %>"><%= campground.name %></a></h6>
                    <% if (campground.rating === 0) { %>
                        <em>No reviews yet.</em>
                        <% } else { %>
                        <span class="fa fa-star amber-text"></span>
                        <i class="fa fa-star <% if (campground.rating > 1.5) { %> amber-text <% }else{ %> unchecked <% } %>"></i>
                        <i class="fa fa-star <% if (campground.rating > 2.5) { %> amber-text <% }else{ %> unchecked <% } %>"></i>
                        <i class="fa fa-star <% if (campground.rating > 3.5) { %> amber-text <% }else{ %> unchecked <% } %>"></i>
                        <i class="fa fa-star <% if (campground.rating > 4.5) { %> amber-text <% }else{ %> unchecked <% } %>"></i>
                        <span class="text-info">&#x00A0;&#x00A0;<%= campground.rating %>  <em><span class="text-muted">(<%= campground.reviews.length %>)</span></em></span>
                    <% } %>
                    </ul>
                </div>    
                <div class="card-footer">
                    <a href="/campgrounds/<%= campground._id %>" class="float-left text-danger">Read More</a>
                    <span class="float-right text-danger"><i class="fas fa-heart "></i> <small class ="text-muted"><%= campground.likes.length %></small></span>
                </div>
            </div>
        </div>
    <% }); %>
        </div>
	</div>
</div>


<%- include ("../partials/footer") %>