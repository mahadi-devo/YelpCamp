<%- include ("./partials/header") %>


    <div class="form-signUp">
        <div class="header text-center">
            <h2>Sign Up</h2>
        </div>
        <form id="form" class="form" action="/register" method="POST">
          <div class="form-row">
            <div class="col">
                <div class="md-form">
                  <i class="fas fa-pen prefix"></i>
                    <input value="<%= messages.firstName %>"
                    type="text" name= "firstName" id="firstName" class="form-control shadow-none" autocomplete="off" onfocusout="validateFirstName()" required>
                    <label for="firstName">First Name</label>
                    <i class="fas fa-check-circle"></i>
                    <i class="fas fa-exclamation-circle"></i>
                    <small>Error message</small>
                </div>
              </div>
             <div class="col">
              <div class="md-form">
                <i class="fas fa-pen prefix"></i>
                <input value="<%= messages.lastName %>"
                type="text" name="lastName" id="lastName" class="form-control shadow-none" autocomplete="off" onfocusout="validateLastName()" required>
                <label for="lastName">Last Name</label>
                <i class="fas fa-check-circle"></i>
                <i class="fas fa-exclamation-circle"></i>
                <small>Error message</small>
            </div>
            </div>
          </div>
          <div class="form-row">
            <div class ="col">
              <div class="md-form">
                <i class="fas fa-user prefix"></i>
                <input value="<%= messages.username %>"
                type="text" name="username" id="username" class="form-control shadow-none" autocomplete="off" onfocusout="validateusername()" required>
                <label for="username">User Name</label>
                <i class="fas fa-check-circle"></i>
                <i class="fas fa-exclamation-circle"></i>
                <small>Error message</small>
              </div>
            </div>
            <div class ="col">
              <div class="md-form">
                <i class="fas fa-user-circle prefix"></i>
                <input value="<%= messages.avatar %>"
                type="text" name="avatar" id="avatar" class="form-control shadow-none" autocomplete="off">
                <label for="avatar">User Image(optional)</label>
                <i class="fas fa-check-circle"></i>
                <i class="fas fa-exclamation-circle"></i>
                <small>Error message</small>
              </div>
            </div>
        </div>
        <div class="md-form">
          <i class="fas fa-at prefix"></i>
          <input value="<%= messages.email %>" type="email" name="email" id="email" class="form-control shadow-none" autocomplete="off" onfocusout="validateEmail()" required>
          <label for="email">Email</label>
          <i class="fas fa-check-circle"></i>
          <i class="fas fa-exclamation-circle"></i>
          <small>Error message</small>
        </div>
        <div class="md-form">
          <i class="fas fa-user-shield prefix"></i>
          <input type="text" name="adminCode" id="adminCode" class="form-control shadow-none" autocomplete="off">
          <label for="adminCode">Admin Code(optional)</label>
          <i class="fas fa-check-circle"></i>
          <i class="fas fa-exclamation-circle"></i>
          <small>Error message</small>
        </div>
        <div class="md-form">
          <i class="fas fa-key prefix"></i>
          <input type="password" name="password" id="password" class="form-control shadow-none" autocomplete="off" onfocusout="validatePassword()" required>
          <label for="password">Password</label>
          <i class="fas fa-check-circle"></i>
          <i class="fas fa-exclamation-circle"></i>
          <small>Error message</small>
        </div>
        <div class="md-form">
          <i class="fas fa-key prefix"></i>
          <input type="password" name="password2" id="password2" class="form-control shadow-none" autocomplete="off" onfocusout="validatePassword2()" required>
          <label for="password2">Confirm Password</label>
          <i class="fas fa-check-circle"></i>
          <i class="fas fa-exclamation-circle"></i>
          <small>Error message</small>
        </div>
      <button class="btn btn-lg btn-success btn-block mb-3" type="submit">Sign Up</button>
      <p>Already have an account? <a href="/Login" >Log In here!</a></p>
    </form>
    </div>
</div>

<%- include ("./partials/footer") %>